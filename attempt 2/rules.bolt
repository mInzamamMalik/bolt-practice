type TaskComments {

	$commentid : Boolean

}
type TaskLikes {

	$userId :  Boolean
}

type Task{

	title : String,
	description : String,
	Created_By : String,
	comments : TaskComments,
	likes : TaskLikes

}

path /project_id/tasks/{$taskid} is Task{

	
}
